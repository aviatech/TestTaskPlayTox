<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.FileAppender">
        <file>log/logFile.txt</file>
        <append>false</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %level [%thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>